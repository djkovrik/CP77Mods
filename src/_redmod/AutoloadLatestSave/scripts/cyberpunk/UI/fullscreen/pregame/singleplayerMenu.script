	private function CheckPatchNotes()
	{
		if( !( m_uiSystem ) )
		{
			m_uiSystem = GameInstance.GetUISystem( GetPlayerControlledObject().GetGame() );
		}
		if( !( m_uiSystem.GetIsEulaAccepted() ) )
		{
			return;
		}
		if( !( m_requestHandler ) )
		{
			m_requestHandler = GetSystemRequestsHandler();
		}
