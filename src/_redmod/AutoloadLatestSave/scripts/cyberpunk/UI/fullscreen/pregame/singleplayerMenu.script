			SetControlsVisible( false );
			m_isEulaWindowOpened = true;
			PlayLibraryAnimation( 'eula_intro' );
			RegisterToGlobalInputCallback( 'OnPostOnPress', this, 'OnButtonPress' );
			GetPlayerControlledObject().RegisterInputListener( this, 'system_quit_game' );
