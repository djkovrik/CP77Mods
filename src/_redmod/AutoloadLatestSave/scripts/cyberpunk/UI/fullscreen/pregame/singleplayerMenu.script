			m_declineButtonController.RegisterToCallback( 'OnButtonStateChanged', this, 'OnDeclineButtonStateChanged' );
			m_acceptButtonController = ( ( inkButtonController )( inkWidgetRef.GetControllerByType( m_acceptButtonWidget, 'inkButtonController' ) ) );
			m_acceptButtonController.RegisterToCallback( 'OnButtonClick', this, 'OnAcceptButtonClick' );
			m_acceptButtonController.RegisterToCallback( 'OnButtonStateChanged', this, 'OnAcceptButtonStateChanged' );
		}
		else
		{
			inkWidgetRef.SetVisible( m_eulaWidget, false );
		}
